<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".fragments.PublicationDetailsFragment">

    <FrameLayout
        android:id="@+id/listTagsPublication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/titlePublication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6sp"
        android:paddingBottom="16sp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/title_text"
        android:text="Example title of publication" />

    <TextView
        android:id="@+id/contentPublication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/content_text"
        android:lineHeight="22sp"
        android:textSize="18sp"
        android:text="@string/example_publication_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Martin"
            android:textColor="@color/green"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dateOfCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="13/11/2024"
            android:textColor="@color/light_gray"
            />
    </LinearLayout>

</LinearLayout>