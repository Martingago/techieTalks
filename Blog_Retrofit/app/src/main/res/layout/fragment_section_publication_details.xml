<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.SectionPublicationDetailsFragment">
<LinearLayout
    style="@style/SectionLayoutStyle">
    <!-- DETALLES DE LA PUBLICACIÓN-->
    <FrameLayout
        android:id="@+id/fragmentPublicationDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <TextView
        android:layout_marginTop="36dp"
        style="@style/SubTitleTextStyle"
        android:text="@string/comments_section"/>

    <FrameLayout
        android:id="@+id/fragmentAddNewCommentSectionPublicationDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>

    <!-- SECCIÓN COMENTARIOS-->
    <FrameLayout
        android:id="@+id/fragmentCommentSectionPublicationDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"/>
</LinearLayout>
</ScrollView>